<header id="header">
    <div id="header-outer" class="outer">
        <div class="container">
            <div class="container-inner">
                <div id="header-title">
                    <h1 class="logo-wrap">
                        <% if (page.lang === "en") { %>
                            <a href="<%- url_for() %>" class="logo"></a>
                        <% } else { %>
                            <a href="<%- url_for().replace('../', '') %>" class="logo"></a>
                        <% } %>
                    </h1>
                    <% if (theme.subtitle) { %>
                        <h2 class="subtitle-wrap">
                            <p class="subtitle"><%= theme.subtitle %></p>
                        </h2>
                    <% } %>
                </div>
                <div id="header-inner" class="nav-container">
                    <a id="main-nav-toggle" class="nav-icon fa fa-bars"></a>
                    <div class="nav-container-inner">
                        <ul id="main-nav">
                            <% for (var i in theme.menu) {
                                    if (i == 'Categories') { %>
                                        <% for (link in theme.menu[i][page.lang]) { %>
                                            <% if (page.lang === "en") { %>
                                                <li class="main-nav-list-item">
                                                    <a class="main-nav-list-link" href="<%- url_for('categories/' + link) %>"><%= theme.menu[i][page.lang][link] %></a>
                                                </li>
                                            <% } else { %>
                                                <li class="main-nav-list-item">
                                                    <a class="main-nav-list-link" href="<%- url_for('categories/' + link).replace('../', '') %>"><%= theme.menu[i][page.lang][link] %></a>
                                                </li>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <% if (page.lang === "en") { %>
                                            <li class="main-nav-list-item" >
                                                <a class="main-nav-list-link" href="<%- url_for(theme.menu[i]) %>"><%= __('index.' + i.toLowerCase()) %></a>
                                            </li>
                                        <% } else { %>
                                            <li class="main-nav-list-item" >
                                                <a class="main-nav-list-link" href="<%- url_for(theme.menu[i]).replace('../', '') %>"><%= __('index.' + i.toLowerCase()) %></a>
                                            </li>
                                        <% } %>
                            <% }} %>
                        </ul>
                        <nav id="sub-nav">
                            <ul id="main-nav">
                                <li class="main-nav-list-item"><a href="/" class="main-nav-list-link">English</a></li>
                                <li class="main-nav-list-item"><a href="/vi/" class="main-nav-list-link">Tiếng Việt</a></li>
                                <li class="main-nav-list-item"><a href="/ja/" class="main-nav-list-link">日本語</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>