i.icon
    display: inline-block
    font-style: normal
    text-align: center
    &:before
        transition: 0.2s ease-in

.post-tag
    border solid
    border-color #006bde
    border-width 1px
    border-radius 5px
    margin 3px
    padding 3px
    white-space nowrap
    text-transform lowercase

    a
        color #777
    a:hover
        color #000000
        
